    	   <listitem label="Course 1" />
    	   <listitem label="Course 2" />
    	   <listitem label="Course 3" />
    	   <listitem label="Course 4" />
    	 </listbox>
    	 <button image="./image/icone-plus.png" id="newCourse"/>

		<label value=" Voiture : "/>
