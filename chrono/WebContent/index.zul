]]></zscript>

<window title="Project Chrono v1.0" border="normal" width="100%" apply="chrono.Controlleur">

	<div id="barMenu" align="center">
		<label value=" Evenement : "/>
		<listbox mold="select" id="listboxEvent">
    	   <listitem label="Event 1" />
